<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.abdullahbalta.notifications.MainActivity">

    <Button
        android:text="Simple Notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:onClick="sendSimpleNotification" />

    <Button
        android:text="Expanded Notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button"
        android:onClick="sendExpandedNotification" />

    <Button
        android:text="REPLY NOTIFICATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button"
        android:onClick="sendReplyNotification" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_not_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Notification Id"/>

        <Button
            android:text="Clear Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button"
            android:onClick="clearNotification" />
    </LinearLayout>

    <Button
        android:text="Clear All Notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button"
        android:onClick="clearAllNotification" />

    <Button
        android:text="Summary Notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        style="@style/Widget.AppCompat.Button"
        android:onClick="summaryAllNotification" />

    <Button
        android:text="Determinate Notificaitons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        style="@style/Widget.AppCompat.Button"
        android:onClick="determinateNotification"/>

    <Button
        android:text="Heads Up Notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        style="@style/Widget.AppCompat.Button"
        android:onClick="headsUpNotification"/>

    <Button
        android:text="Music Notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        style="@style/Widget.AppCompat.Button"
        android:onClick="lockScreenNotification"/>

</LinearLayout>
